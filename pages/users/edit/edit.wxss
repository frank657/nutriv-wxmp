/* H1 */
.border {
  background-image: radial-gradient( circle farthest-corner at 10% 20%,  rgba(128,248,174,0.8) 10%, rgba(223,244,148,0.8) 95% );
  margin-bottom: 10px;
  width: 100%;
  font-weight: bold;
  margin-top: 15px;
}

.border-text {
  margin-left: 45px;
}

.navbar-image {
  width: 26px;
  height: 26px;
}

#navbar {
  position: fixed;
  bottom: 0px;
  left: 0px;
  right: 0px;
  margin-bottom: 0px;
  font-size: 10px;
  border-top: 1px solid lightgray;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10px 0;
  background-color: rgb(254, 254, 254);
}

.navbar-selection {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60px;
}

.section-main {
  /* height: calc(100vh - 63px); */
  margin-bottom: 63px;
  padding-bottom: 10px;
}

.card-goal {
  margin-bottom: 16px;
  background-color: white;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0,.06);
  padding: 10px;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.label-green-box {
  background-color: #1EBF66;
  color: white;
  font-size: 16px;
  /* margin-top: 16px; */
  margin-bottom: 16px;
  font-weight: bold;
  padding: 5px 20px;
  border-radius: 5px 5px 0px 0px;
  margin-top: 96px;
}
.text-center {
  text-align: center;
}

.section-logo {
  position: absolute;
  top: -10px;
  right: 10px;
  border-radius: 50%;
  border: solid 20x white;
  width: 40px;
  height: 40px;
  background-size: cover;
  background-position: center;
}

.section-summary {
  width: 87%;
  margin-top: 30px;
  margin: 0 auto;
  background: #FFF;
  border-radius: 5px;
  /* border: solid 1px #1EBF66; */
  box-shadow: 2px 2px 20px rgba(0,0,0,0.2);
  /* padding: 16px; */
  font-size: 16px;
  color: rgba(0,0,0,0.8);
  position: relative;
}

.nutrients-wrapper {
  margin: 0;
  padding: 16px;
