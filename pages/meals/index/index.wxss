  padding: 20px;
  margin-bottom: 10px;
  background-size: cover;
  background-position: center;
  position: relative;
}

.meal-type {
  position: absolute;
  bottom: 10px;
  right: 50px;
  min-width: 100px;
  min-height: 30px;
  background-color: rgba(255,255,255,0.8);
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: bold;
}

