.border {
  background-image: radial-gradient( circle farthest-corner at 10% 20%,  rgba(128,248,174,0.8) 10%, rgba(223,244,148,0.8) 95% );
  margin-bottom: 10px;
  width: 100%;
  font-weight: bold;
}

.border-avatar {
  background-image: radial-gradient( circle farthest-corner at 10% 20%,  rgba(128,248,174,0.8) 10%, rgba(223,244,148,0.8) 95% );
  margin-bottom: 10px;
  width: 100%;
  font-weight: bold;
  display: flex;
  position: relative;
}

.avatar {
  background-size: cover;
  border-radius: 50%;
  width: 45px;
  height: 45px;
  /* border: solid 1px black; */
  position: absolute;
  right: 30px;
  top: -5px;
}

.today-intake {
  width: 100%;
