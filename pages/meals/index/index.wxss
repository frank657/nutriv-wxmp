/* pages/meals/index/index.wxss */

.banner {
  height: 160px;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  margin-bottom: 20px;
}

.page__bd {
  width: 70%;
}

.weui-search-bar {
 
}

.border {
  border-bottom: 1px solid black;
  margin-bottom: 10px;
}

.card-dish {
  display: flex;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0,.06);
  overflow: hidden;
  width: 100%;
  height: 150px;
  margin-bottom: 10px;
}

image {
  width: 40%;
  height: 150px;
}

.border-text {
  margin-left: 45px;
}

.dish-title {
  text-align: center;
  font-weight: bold;
}

.card-text {
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.calories {
 display: flex;
 justify-content: space-around;
}

.calories-text,
.text-count,
.proteins-text {
  font-size: 14px;
}

.calorie-icon,
.protein-icon {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.banner-title {
  margin-top: 5px;
  font-size: 30px;
  font-weight: bold;
}

.banner-text {
  width: 100%;
}

.banner-daily {
  display: flex;
  justify-content: space-around;
}

.icon {
  width: 40px;
  height: 40px;
}

.calorie-icon-title {
  display: flex;
  align-items: center;
}

.icon.nutri {
  width: 60px;
  height: 60px;
}

.icon.fire {
  width: 30px;
  height: 25px;
  margin-bottom: 10px;
}

.icon.steak {
  margin-right: 5px;
}

.daily-text {
  font-size: 14px;
}

.daily-calories,
.proteins-icon-title {
  display: flex;
  align-items: center;
}

.daily-proteins {
  display: flex;
  align-items: center;
}

.protein-icon {
  width: 30px;
  height: 30px;
}

.proteins {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

