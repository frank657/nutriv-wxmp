<view class='section-main'>
  <view class='title'>
      <image src="/images/diet.png" class='icon-title'></image>
      <text class="text-title">Nutritional Summary</text>
    </view>
  <!-- total nutrients start -->
  <view class='section-summary'>
    
    <view class='text-nutrients'>
      <view>Calories</view>
      <view>{{calorie}}kcal</view>
    </view>
    <view class='text-nutrients'>
      <view>Total Fat</view>
      <view>{{total_fat}}g</view>
    </view>
    <view class='text-nutrients'>
      <view>Saturated Fat</view>
      <view>{{sat_fat}}g</view>
    </view>
    <view class='text-nutrients'>
      <view>Cholesterol</view>
      <view>{{cholesterol}}mg</view>
    </view>
    <view class='text-nutrients'>
      <view>Sodium</view>
      <view>{{sodium}}mg</view>
    </view>
    <view class='text-nutrients'>
      <view>Total Carbohydrate</view>
      <view>{{carb}}g</view>
    </view>
    <view class='text-nutrients'>
      <view>Dietary Fiber</view>
      <view>{{fiber}}g</view>
    </view>
    <view class='text-nutrients'>
      <view>Sugars</view>
      <view>{{sugar}}g</view>
    </view>
    <view class='text-nutrients'>
      <view>Protein</view>
      <view>{{protein}}g</view>
    </view>
  </view>
  <!-- total nutrients end -->

  <!-- dishes start -->
  <view class="page__bd dishes">
    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__hd">Dishes</view>
      <view class="weui-panel__bd">
        <view url="" class="weui-media-box weui-media-box_text dish" hover-class="weui-cell_active">
          <view class="weui-media-box__title weui-media-box__title_in-text">
            <view class='dish-name'>{{dish.name}}</view>
          </view>
          <view class="weui-media-box__desc">
            <view class='dish-nutrition'>{{dish.nutrients[1].amount}} Calories</view>
          </view>
          <view class="dish-quantity">
            <image bindtap='subtractAmount' class='image-icon' src='/images/minus-symbol.png'></image>
            <view class='dish-number'>{{quantity}}</view>
            <image bindtap='addAmount' class='image-icon' src='/images/plus-button.png'></image>
          </view>
        </view>
      </view>
    </view>
  </view>
  <!-- dishes end -->
</view>



<view id='footer'>
  <!-- <view>{{calorie}} Calories</view> -->
  <!-- <view bindtap='addToMeal' class="btn-flat picker">Confirm Meal</view> -->
  <button class="btn-flat" bindtap="addToMeal">Confirm Meal</button>
</view>