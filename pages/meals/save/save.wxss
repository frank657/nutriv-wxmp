/* pages/orders/show/show.wxss */

.bg-color {
  /* background-color: #59A96A; */
}

#footer {
  position: fixed;
  height: 50px;
  width: 100%;
  background-color: rgb(252, 252, 252);
  bottom: 0px;
  left: 0px;
  right: 0px;
  margin-bottom: 0px;
  /* padding: 8px; */
  padding-bottom: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-flat {
  color: white;
  padding: 5px;
  border-radius: 25px;
  background: #1EBF66;
  font-size: 16px;
  width: 80%;
  /* width: 200px; */
  margin: 0px;
  box-shadow: 2px 2px 2px rgba(0,0,0,0.1);
}

.text-hour {
  font-size: 10px;
  color: grey;
}

.text-price {
  font-size: 16px;
  font-weight: bold;
}

.section-main {
  margin-bottom: 60px;
  position: relative;
}

.nutrient-fixed-top {
  /* position: fixed; */
  /* top:0px; */
}

.section-summary {
  width: 75%;
  margin-top: 30px;
  margin: 0 auto;
  background: #FFF;
  border-radius: 10px;
  border: solid 1px #1EBF66;
  box-shadow: 2px 2px 2px rgba(0,0,0,0.2);
  padding: 16px;
  font-size: 16px;
  color: rgba(0,0,0,0.8);
}

.card-dish {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30px;
}

.icon-title {
  width: 30px;
  height: 30px;
  padding-right: 10px;
}

.text-title {
  /* text-align: center; */
  /* padding: 20px; */
  font-size: 18px;
  font-weight: bold;
}

.text-nutrients {
  display: flex;
  justify-content: space-between;
  /* border-bottom: solid 1px lightgray; */
  border-bottom: dotted 1px #1EBF66;
}

.section-quantity {
  display: flex;
}

.dishes {
  position: relative;
  bottom: 10px;
  margin-top: 40px;
  padding-bottom: 20px;
}

.image-icon {
  width: 24px;
  height: 24px;
}

.dish-quantity {
  display: flex;
  position: absolute;
  right: 16px;
  bottom: 4px;
  align-items: center;
}

.dish {
  position: relative;
}

.dish-name {
  font-weight: bold;
  font-size: 14px;
  padding-bottom: 10px;
}

.dish-nutrition {
  font-size: 12px;
  color: grey;
}

.card {
  border: solid 1px grey;
  position: relative;
}

.dish-number {
  width: 40px;
  text-align: center;
}


