  <!-- H1 TITLE -->
<!-- <view class="weui-panel__hd label-green">Add Meal</view> -->

  <!-- OPTIONS TO ADD MEAL -->
  <view class='card-wrapper'>
    <view class='card-options'>
      <view class='btn-option' bindtap='scanQrCode'>
        <view class='card-content'>
          <image src="/images/qr-code.png" class='card-option-img'></image>
        </view>
        <view class='card-content'>
          Scan QR Code
        </view>   
      </view>
      <view class='btn-option' bindtap='addNewMeal'>
        <view class='card-content'>
          <image src="/images/choose.png" class='card-option-img'></image>
        </view>
        <view class='card-content'>
          Choose & Add
        </view>  
      </view>
    </view>
  </view>

  <!-- H1 TITLE -->
  <view class="weui-panel__hd label-green">Recommended Meals</view>

  <!-- Filter -->
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class='btn-green' type="default">
      <text>{{array[index]}}</text>
      <image class='image-icon' src='/images/arrow-down.png'></image>
    </view>
  </picker>

  <!-- Dishes -->
  <view wx:for="{{mealsRecommended}}" wx:for-item="dish">

    <view class='card-dish' bindtap="mealMoreInfo" data-id="{{dish.id}}" style="background-image: linear-gradient(rgba(255,255,255,0.7),rgba(255,255,255,0.7)), url('{{dish.image}}')">
      <!-- DISH NAME -->
      {{dish.name}} 
      <!-- - {{dish.nutrients[1]["name"]}}: {{dish.nutrients[1]["amount"]}} {{dish.nutrients[1]["unit"]}} -->
    </view>

  </view>
</view>
<!-- navbar -->
