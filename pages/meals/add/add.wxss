.banner {
  height: 120px;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
}

.banner-title {
  margin-top: 0px;
  font-size: 30px;
  font-weight: bold;
}

.banner-text {
  width: 100%;
}

.icon.nutri {
  width: 60px;
  height: 60px;
}

.image-icon {
  width: 24px;
  height: 24px;
}

.card-dish {
  margin-left: 15px;
  margin-top: 10px;
  width: 87%;
  /* height: 45px; */
  background-color: white;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0,.06);
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 10px;
  padding-top: 10px;
  margin-right: 15px;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-dish-plus-btn {
  width: 26px;
}