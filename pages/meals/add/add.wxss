/* pages/meals/add/add.wxss */
.banner {
  height: 120px;
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
}

.banner-title {
  margin-top: 0px;
  font-size: 30px;
  font-weight: bold;
}

.banner-text {
  width: 100%;
}

.icon.nutri {
  width: 60px;
  height: 60px;
}

.image-icon {
  width: 24px;
  height: 24px;
}

.card-dish {
  display: flex;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0,.06);
  overflow: hidden;
  width: 100%;
  height: 120px;
  padding: 20px;
  margin-bottom: 10px;
  background-size: cover;
  background-position: center;
  position: relative;
}