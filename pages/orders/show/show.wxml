<!-- total nutrients start -->
<view class='section-main'>
  <view class='text-title'>Summary</view>
  <view class='text-nutrients'>
    <view>Calories</view>
    <view>230</view>
  </view>
  <view class='text-nutrients'>
    <view>Total Fat</view>
    <view>8g</view>
  </view>
  <view class='text-nutrients'>
    <view>Saturated Fat</view>
    <view>1g</view>
  </view>
  <view class='text-nutrients'>
    <view>Trans Fat</view>
    <view>0g</view>
  </view>
  <view class='text-nutrients'>
    <view>Protein</view>
    <view>3g</view>
  </view>
  <view class='text-nutrients'>
    <view>Total Carbs 37g</view>
    <view>3g</view>
  </view>
</view>
<!-- total nutrients end -->
<view class="page__bd dishes">
    <view class="weui-panel weui-panel_access">
        <view class="weui-panel__hd">Dishes</view>
        <view class="weui-panel__bd">
            <view url="" class="weui-media-box weui-media-box_appmsg dish" hover-class="weui-cell_active">
                <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                    <image class="weui-media-box__thumb" src="{{icon60}}" />
                </view>
                <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                    <view class="weui-media-box__title dish-description">
                    <view class='dish-name'>Chicken Salad</view>
                    <view class='dish-nutrition'>230 Calories</view>
                    </view>
                    <view class="dish-quantity">
                      <image  class='image-icon' src='/images/minus-symbol.png'></image>
                      <view class='dish-number'>1</view>
                      <image  class='image-icon' src='/images/plus-button.png'></image>
                    </view>
                </view>
            </view>
            <view url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                    <image class="weui-media-box__thumb" src="{{icon60}}" />
                </view>
                <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                    <view class="weui-media-box__title">
                      <view class='dish-name'>Cheeseburger</view>
                      <view class='dish-nutrition'>450 Calories</view>
                    </view>
                    <view class="dish-quantity">
                      <image  class='image-icon' src='/images/minus-symbol.png'></image>
                      <view class='dish-number'>0</view>
                      <image  class='image-icon' src='/images/plus-button.png'></image>
                    </view>
                </view>
            </view>
        </view>
    </view>
  </view>
