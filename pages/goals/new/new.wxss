/* pages/trainings/new/new.wxss */
/* Banner */

.banner {
  color: white;
  text-align: center;
  height: 150px;
  background-size: cover !important;
  align-items: center;
  justify-content: center;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  /* position: fixed; */
  /* z-index: 2; */
  width: 100%;
}

.h2-header {
 color: black;
  font-size: 40rpx; 
  font-weight: bold;
  padding: 15px;}

.box {
  padding: 5px 20px;
  /* width: 100%; */
}

.user-input {
  /* width: 100%; */
  margin-bottom: 15rpx;
  border-radius: 3px;
  border: solid 1px rgba(0,0,0,0.1);
  padding: 0px 5px;
  font-size: 14px;
  box-shadow: 2px 2px 2px rgba(0,0,0,0.1);
}

.input-height {
  height: 3em;
  display: flex;
  align-items: center;
  color: rgba(0,0,0,0.8);
}

.upload-preview {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  /* text-align: center; */
  font-size: 14px;
  color: rgba(0,0,0,0.4);
}

.img-upload-preview {
  width: 200px;
  height: 100px;
  border: solid 1px rgba(0,0,0,0.1);
  background-color: rgba(0,0,0,0.1);
  margin-bottom: 15px;
  background-size: cover;
  background-position: center;
}

.icon {
  width: 70px;
  height: 70px;
  padding: 0px 20px;
}

.icon-text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}

.button-inline {
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-half {
  width: 100%;
  margin: 5px;
}

.picker {
  margin-bottom: 20px;
}

.label-green-box {
  background-color: #1EBF66;
  color: white;
  font-size: 16px;
  /* margin-top: 16px; */
  margin-bottom: 16px;
  font-weight: bold;
  padding: 5px 20px;
  border-radius: 5px 5px 0px 0px;
  margin-top: 96px;
}
.text-center {
  text-align: center;
}

.section-logo {
  position: absolute;
  top: -10px;
  right: 10px;
  border-radius: 50%;
  border: solid 20x white;
  width: 40px;
  height: 40px;
  background-size: cover;
  background-position: center;
}

.section-summary {
  width: 87%;
  margin-top: 30px;
  margin: 0 auto;
  background: #FFF;
  border-radius: 5px;
  /* border: solid 1px #1EBF66; */
  box-shadow: 2px 2px 20px rgba(0,0,0,0.2);
  /* padding: 16px; */
  font-size: 16px;
  color: rgba(0,0,0,0.8);
  position: relative;
}

.nutrients-wrapper {
  margin: 0;
  padding: 16px;
}

.image-icon {
  width: 8px;
  height: 8px;
  margin: 4px;
}